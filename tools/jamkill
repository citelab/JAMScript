#!/bin/bash

# Edit the following locations to provide the
TMUX=`which tmux`
if [ -z $TMUX ]; then
    TMUX=/usr/local/bin/tmux
fi

# No need to edit below this line unless you find a bug!

die() {
    printf '%s\n' "$1" >&2
    exit 1
}

show_usage() {
    cat << EOF
jamkill --all
kills all running instances

jamkill app-id
kills all running instances that are from application app-id

Usage: jamkill --all|app-id

EOF
}


killprocess() {
    if [ -e $1/processId ]; then
        local pid=`cat $1/processId`
        local present=`ps -p $pid | grep node | wc -l`
        if [ $present == "1" ]; then
            kill -9 $pid
        fi
    fi
}


killjob() {
    local jobid=$1

    for jruns in */; do
        if [ $jruns != "*/" ]; then
            local appid=`cat $jamfolder/$jruns/appid`
            if [ $appid == $jobid ]; then
                for jexs in `ls $jamfolder/$jruns`; do
                    dir=$jamfolder/$jruns$jexs
                    if [ -d $dir ]; then
                        echo "Killing application running at " $jexs
                        killprocess $dir
                        if [ -e $dir/tmuxid ]; then
                            killtmux `cat $dir/tmuxid`
                        fi
                    fi
                done
            fi
        fi
    done
}

killalljobs() {

    for jruns in */; do
        if [ $jruns != "*/" ]; then
            for jexs in `ls $jamfolder/$jruns`; do
                dir=$jamfolder/$jruns$jexs
                if [ -d $dir ]; then
                    echo "Killing application running at " $jexs
                    killprocess $dir
                    if [ -e $dir/tmuxid ]; then
                        local tmuxid=`cat $dir/tmuxid`
                        $TMUX kill-session -t $tmuxid
                    fi
                fi
            done
        fi
    done

}


if [ -z $1 ] || [ $1 == "-h" ] || [ $1 == "--help" ]; then
    show_usage
    exit
fi


jamfolder=$HOME"/__jamruns"
if [ ! -d $jamfolder ]; then
    echo "No running instances of JAMScript."
    exit 0
fi

if [ "$(ls -A $jamfolder)" ]; then

    cd $jamfolder

    if [ $1 == "--all" ]; then
        killalljobs
        exit
    fi

    killjob $1
fi
